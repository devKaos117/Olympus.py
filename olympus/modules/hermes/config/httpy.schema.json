{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/devKaos117/Hermes.py/blob/main/hermes/config/httpy.schema.json",
    "title": "hermes.HTTPy config schema",
    "description": "Configuration dictionary to hermes HTTP client",
    "type": "object",
    "properties": {
        "randomize-agent": {
            "description": "Defines if the HTTP client will use random user agents for each request",
            "type": "boolean",
            "default": true
        },
        "max-retries": {
            "description": "Indicates the number of retries that the client will perform for failed requests",
            "type": "integer",
            "minimum": 0,
            "default": 3
        },
        "retry_status_codes": {
            "description": "List the HTTP status codes that will trigger a retry",
            "type": "array",
            "items": {
                "type": "integer"
            },
            "default": [429, 500, 502, 503, 504]
        },
        "success_status_codes": {
            "description": "List the HTTP status codes that will be considered as a success",
            "type": "array",
            "items": {
                "type": "integer"
            },
            "default": [200, 201, 202, 203, 204, 205, 206, 207, 208]
        },
        "timeout": {
            "description": "Defines the request timeout in seconds",
            "type": "integer",
            "minimum": 0,
            "default": 10
        },
        "headers": {
            "description": "A dictionary containing the default headers to be used in all requests",
            "type": "object",
            "properties": {
                "Accept": {
                    "description": "",
                    "type": "string"
                },
                "Accept-Encoding": {
                    "description": "",
                    "type": "string"
                },
                "Accept-Language": {
                    "description": "",
                    "type": "string"
                },
                "Access-Control-Request-Headers": {
                    "description": "",
                    "type": "string"
                },
                "Access-Control-Request-Method": {
                    "description": "",
                    "type": "string"
                },
                "Authorization": {
                    "description": "",
                    "type": "string"
                },
                "Cache-Control": {
                    "description": "",
                    "type": "string"
                },
                "Connection": {
                    "description": "",
                    "type": "string"
                },
                "DNT": {
                    "description": "",
                    "type": "string"
                },
                "User-Agent": {
                    "description": "",
                    "type": "string"
                }
            },
            "default": {}
        }
    }
}